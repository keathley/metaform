<div class="page-header">
  <h1>Widgets</h1>
</div>
<div class="actions">
  <div class="pull-right">
    <%= link("New Widget", to: widget_path(@conn, :new)) %>
  </div>
</div>
<div class="product-list">
  <%= for widget <- @widgets do %>
    <div class="widget">
      <div class="title">
        <p>
          <%= widget.metadata.title %>
        </p>
      </div>
    </div>
  <% end %>
</div>
